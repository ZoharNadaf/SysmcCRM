@model SysmcCRM.Models.ViewModel.UpdateContactViewModel
@{
}
<h1>Contact Details</h1>
<form method="post" action="ContactDetails" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" required="required">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Office Number</label>
        <input type="text" class="form-control" asp-for="OfficeNumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>

    <button type="submit" class="btn-primary" asp-action="ContactDetails" asp-controller="Contacts">Update</button>
    <button type="submit" class="btn-danger" asp-action="Delete" asp-controller="Contacts">Delete</button>

</form>